#!/usr/bin/env bash
# Resolve symlinks to find the real script location (works on macOS + Linux)
SOURCE="$0"
while [ -L "$SOURCE" ]; do
  DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
  SOURCE="$(readlink "$SOURCE")"
  [[ "$SOURCE" != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$(cd -P "$(dirname "$SOURCE")/.." && pwd)"
exec npx --prefix "$SCRIPT_DIR" tsx "$SCRIPT_DIR/src/main.ts" "$@"
